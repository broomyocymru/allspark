{
   "sparks":[
      {
         "id": "archiva",
         "description": "Archiva v2.2.1",
         "infra": {
            "src": "github.com/broomyocymru/tf_azurerm_allspark_vm",
            "params": {
               "allspark": "${module.allspark.allspark_data}",
               "username": "<os_username>",
               "password": "<os_password>",
               "role"    : "archiva",
               "subnet"  : "admin"
            }
         },
         "software": {
            "src": "https://github.com/broomyocymru/allspark.archiva"
         }
      },
      {
         "id": "jenkins",
         "description": "Jenkins v2",
         "infra": {
            "src": "github.com/broomyocymru/tf_azurerm_allspark_vm",
            "params": {
              "allspark": "${module.allspark.allspark_data}",
              "username": "<os_username>",
              "password": "<os_password>",
              "vm": "std_windows_server",
              "role"    : "jenkins2",
              "subnet"  : "admin"
            }
         },
         "software": {
            "src": "https://github.com/broomyocymru/allspark.jenkins2"
         }
      }
   ]
}
